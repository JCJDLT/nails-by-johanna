<div class="container p-4">
  <div class="row">

    <div class="col-md-4 mx-auto">
      <form action="/signin" method="POST" class="card card bg-signin-signup text-white p-4">

        <h3 class="text-center my-3">Ingresar</h3>

        <img src="/img/logo.png" alt="Logo" class="card-img-top mx-auto m-2 rounded-circle w-50" />


        {{!-- Email --}}
        <label for="username" class="fw-light fs-6 mb-2">Escribe tu email:</label>
        <input type="text" name="email" placeholder="tuemail@mail.com" class="form-control mb-3" value="{{username}}" autofocus />

        <label for="password">Escribe tu contraseña:</label>
        <div class="form-group">
          <input type="password" name="password" placeholder="contraseña" class="form-control mb-3" />
        </div>
        <button class="btn bg-color-button-signin btn-block">
          Login
        </button>

    </div>
    </form>

    {{! Link }}
    <p class="fs-5 text-center mt-3 text-light">No tienes una cuenta?
      <a href="/signup" class="text-info">Registrate</a>
    </p>

  </div>
</div>